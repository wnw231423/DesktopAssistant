<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GUI.ViewModels"
             x:Class="GUI.Views.ConfigView"
             x:DataType="vm:ConfigViewModel">

	<Design.DataContext>
		<vm:ConfigViewModel />
	</Design.DataContext>

	<StackPanel Margin="20" Spacing="15">
		<TextBlock Text="配置AI的API"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"/>
		
		<TextBox Watermark="请输入API_KEY"
                 Text="{Binding Input1, Mode=TwoWay}"
                 UseFloatingWatermark="True"/>

		<TextBox Watermark="请输入SECRET_KEY"
                 Text="{Binding Input2, Mode=TwoWay}"
                 UseFloatingWatermark="True"/>

		<Button Content="保存配置"
                Command="{Binding ConfirmCommand}"
                HorizontalAlignment="Center"
                Padding="25 5"
                FontWeight="Bold"/>
	</StackPanel>
</UserControl>