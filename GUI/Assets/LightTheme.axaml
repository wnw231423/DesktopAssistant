<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 引用基础颜色 -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Assets/ColorDefinitions.axaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- 浅色主题 UI 元素颜色 -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource LuojiaBlueColor}"/>
    
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource LuojiaGreenColor}"/>
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="{StaticResource DonghuBlueColor}"/>
    
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ChenwuGrayColor}"/>
    
    <!-- 功能性颜色 -->
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource LuoyingPinkColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource LuojiaGreenColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource QiuguiYellowColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ShuangyeRedColor}"/>
</ResourceDictionary>
